<div class="display-random-beers">
    <img class="random-beer-img" src="{{beer.image_url}}" />
  <div class="random-beers">
    <h2>{{beer.name}}</h2>
    <h3>{{beer.tagline}}</h3>
    <p>{{beer.description}}</p>
    <h3>Food pairing</h3>
    <ul>
      {{#each beer.food_pairing}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <h3> Brewers Tips</h3>
    <p> {{beer.brewers_tips}} </p>
  </div>
</div>